{
    "name": "GIF Disabler",
    "version": "1.0.0",
    "description": "Block GIFs from automatically playing.",
    "manifest_version": 3,
    "author": "Builder Shende",
    "action": {
        "default_popup": "index.html",
        "default_title": "GIF Disabler"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["main.js"]
    }],
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "/images/logo16.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
    }
}